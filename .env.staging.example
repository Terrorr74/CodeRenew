# ============================================
# CodeRenew Staging Environment Variables
# ============================================
# Copy this file to .env.staging and update the values

# ============================================
# REQUIRED: Database Configuration
# ============================================
POSTGRES_USER=coderenew_staging
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=coderenew_staging
DATABASE_URL=postgresql://coderenew_staging:CHANGE_THIS_TO_STRONG_PASSWORD@db:5432/coderenew_staging

# ============================================
# REQUIRED: Application Security
# ============================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# REQUIRED: Redis Configuration
# ============================================
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ============================================
# OPTIONAL: Anthropic Claude API
# ============================================
# Only needed for AI-powered WordPress scanning features
# EPSS integration works WITHOUT this key
# Leave empty or comment out if not using AI scanning
ANTHROPIC_API_KEY=

# ============================================
# OPTIONAL: Stripe Payment Configuration
# ============================================
# Only needed if using payment processing
# Leave empty or comment out if not using payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# OPTIONAL: Email Configuration
# ============================================
# Only needed for sending emails (notifications, reports)
# Leave empty or comment out if not using email features
RESEND_API_KEY=
EMAILS_FROM_EMAIL=staging@coderenew.com
EMAILS_FROM_NAME=CodeRenew Staging

# ============================================
# REQUIRED: Application URLs
# ============================================
NEXT_PUBLIC_API_URL=https://api-staging.coderenew.com
NEXT_PUBLIC_APP_URL=https://staging.coderenew.com
ALLOWED_ORIGINS=https://staging.coderenew.com

# ============================================
# Application Settings
# ============================================
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# EPSS Integration (No Configuration Needed)
# ============================================
# EPSS (Exploit Prediction Scoring System) integration is built-in
# Uses public API: https://api.first.org/data/v1/epss
# No API key required
# Automatically caches data for 24 hours
# Daily refresh via Celery Beat scheduler
# Works independently of ANTHROPIC_API_KEY
