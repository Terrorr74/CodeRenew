# ============================================
# CodeRenew Production Environment Variables
# ============================================
# Copy this file to .env.production and fill in the values
# NEVER commit the actual .env.production file to version control!

# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=coderenew
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=coderenew
DATABASE_URL=postgresql://coderenew:CHANGE_THIS_TO_STRONG_PASSWORD@db:5432/coderenew

# ========================================
# Application Security
# ========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_64_CHARS_MIN
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# Anthropic Claude API
# ========================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx

# ========================================
# Stripe Payment Configuration
# ========================================
# Production keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ========================================
# Email Configuration (Resend)
# ========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxx
EMAILS_FROM_EMAIL=noreply@coderenew.com
EMAILS_FROM_NAME=CodeRenew

# ========================================
# Redis Configuration
# ========================================
# Generate with: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ========================================
# Application URLs
# ========================================
NEXT_PUBLIC_API_URL=https://api.coderenew.com
NEXT_PUBLIC_APP_URL=https://coderenew.com
ALLOWED_ORIGINS=https://coderenew.com,https://www.coderenew.com

# ========================================
# Application Settings
# ========================================
DEBUG=False
LOG_LEVEL=INFO
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=52428800

# ========================================
# MCP Settings (Optional)
# ========================================
WORDPRESS_MCP_ENABLED=true
WORDPRESS_MCP_URL=https://wordpress.com/mcp
WORDPRESS_MCP_API_KEY=

# ========================================
# Monitoring & Observability (Optional)
# ========================================
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# DATADOG_API_KEY=xxxxx
# NEW_RELIC_LICENSE_KEY=xxxxx
