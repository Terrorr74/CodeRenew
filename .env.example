# ============================================
# CodeRenew Environment Configuration Template
# ============================================
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values

# ===================
# Environment
# ===================
ENVIRONMENT=development

# ===================
# Database
# ===================
POSTGRES_USER=coderenew
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=coderenew
DATABASE_URL=postgresql://coderenew:your_secure_password_here@db:5432/coderenew

# ===================
# Redis
# ===================
REDIS_HOST=redis
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379/0

# ===================
# Security
# ===================
SECRET_KEY=your_super_secret_key_here_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================
# API Keys
# ===================
ANTHROPIC_API_KEY=sk-ant-xxxx
STRIPE_SECRET_KEY=sk_test_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx
RESEND_API_KEY=re_xxxx

# ===================
# Application URLs
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===================
# Logging
# ===================
DEBUG=true
LOG_LEVEL=DEBUG
CELERY_LOG_LEVEL=debug
