# ============================================
# CodeRenew Production Environment
# ============================================
# IMPORTANT: Replace all placeholder values before deploying

ENVIRONMENT=production

# Database
POSTGRES_USER=coderenew
POSTGRES_PASSWORD=CHANGE_THIS_PRODUCTION_PASSWORD
POSTGRES_DB=coderenew
DATABASE_URL=postgresql://coderenew:CHANGE_THIS_PRODUCTION_PASSWORD@db:5432/coderenew

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0

# Security
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_64_CHAR_PRODUCTION_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (use LIVE keys)
ANTHROPIC_API_KEY=sk-ant-xxxx
STRIPE_SECRET_KEY=sk_live_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx
RESEND_API_KEY=re_xxxx

# Application URLs
NEXT_PUBLIC_API_URL=https://api.coderenew.com
NEXT_PUBLIC_APP_URL=https://coderenew.com
ALLOWED_ORIGINS=https://coderenew.com,https://www.coderenew.com

# Logging
DEBUG=false
LOG_LEVEL=INFO
CELERY_LOG_LEVEL=info
