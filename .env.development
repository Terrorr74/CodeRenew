# ============================================
# CodeRenew Development Environment
# ============================================

ENVIRONMENT=development

# Database
POSTGRES_USER=coderenew
POSTGRES_PASSWORD=coderenew_dev_password
POSTGRES_DB=coderenew
DATABASE_URL=postgresql://coderenew:coderenew_dev_password@db:5432/coderenew

# Redis (no password in dev)
REDIS_HOST=redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=dev-secret-key-not-for-production-use
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Keys (use test/sandbox keys)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=
RESEND_API_KEY=

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
DEBUG=true
LOG_LEVEL=DEBUG
CELERY_LOG_LEVEL=debug
